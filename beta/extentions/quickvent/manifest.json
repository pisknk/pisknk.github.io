{
  "manifest_version": 4,
  "name": "Quick Vent",
  "version": "0.1",
  "description": "Swiftly express your frustrations with Quick Vent.",
  "permissions": [
      "activeTab",
      "storage" // Add storage permission here
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon16.png",
          "48": "images/icon48.png",
          "128": "images/icon128.png"
      }
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  }
}